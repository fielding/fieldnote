        %div#sidebar
          %h3 
            Fielding
            %i@
          %h4.sidebarSection Last.fm
          %div#lastfm
            %div#lfAlbumArt
              %img.lfAlbumArt(src="#{locals[:playing].images['medium']}")
            %div#lfText
              %span.artist #{locals[:playing].artist}
              %span.title #{locals[:playing].name}
            %div.clear
          %h4.sidebarSection Twitter
          %div#tweets
            %ul
              - locals[:twitScrape].each do |i|
                %li 
                  #{Twitter::Autolink.auto_link(i['text'])}
                  %span 
                    #{Time.parse(i['created_at']).ago_in_words}
                    %em via #{i['source']}
          %h4.sidebarSection2 Interwebs
          %div#interwebs
            %ul
              - locals[:diigo].each do |d|
                %li
                  %a(href="#{d.url}")
                    #{d.title}
                    %span 
                      #{Time.parse(d.created_at).ago_in_words}
                      %em #{d.tags}

          %h4.sidebarSection3 Flickr
          %div#flickr
            - locals[:flickrFeed].each do |p|
              %img.flickr(src="#{FlickRaw.url_s(p)}")
          %div.clear
        %div.clear
    %footer= partial :_footer
